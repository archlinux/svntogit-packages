# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=qalculate-qt
pkgver=4.2.0
pkgrel=1
pkgdesc='Qt frontend for libqalculate'
arch=(x86_64)
url='https://qalculate.github.io/'
license=(GPL)
depends=(libqalculate qt6-svg hicolor-icon-theme)
makedepends=(qt6-tools)
source=(https://github.com/Qalculate/qalculate-qt/releases/download/v$pkgver/$pkgname-$pkgver.tar.gz)
sha256sums=('1c62e419bb1f4c16aa428f68281bee3c44a12dde865e0a0b22e53b09f79a0a36')

build() {
  cd $pkgname-$pkgver
  qmake6 PREFIX=/usr
  make
}

package() {
  cd $pkgname-$pkgver
  make INSTALL_ROOT="$pkgdir" install
}
