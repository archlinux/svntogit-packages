  pkgdesc="Music playing plugin for MythTV"
  depends=("mythtv>=${pkgver}" 'flac' 'libcdaudio' 'cdparanoia' 'taglib' 'libvisual')
  replaces=('mythmusic')
  cd "${srcdir}/${pkgbase}/mythmusic"
  make INSTALL_ROOT="${pkgdir}" install
}

