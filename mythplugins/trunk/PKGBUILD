  pkgdesc="Local movie listings via MythTV"
  depends=("mythtv>=${pkgver}")
  replaces=('mythmovies')
  cd "${srcdir}/${pkgbase}/mythmovies"
  make INSTALL_ROOT="${pkgdir}" install
}

