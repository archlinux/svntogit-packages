# $Id: PKGBUILD 12108 2008-09-10 01:37:41Z tobias $
# Maintainer: tobias <tobias@archlinux.org>
# Contributor: Dominik Ryba <domryba@post.pl>

pkgname=enblend-enfuse
pkgver=3.2
pkgrel=2
pkgdesc="intelligent blend tool for overlapping picture"
arch=("i686" "x86_64")
license=('GPL')
url="http://enblend.sourceforge.net"
depends=('openexr' 'glew>=1.5' 'libxmi' 'freeglut' 'libgl' 'lcms' 'texinfo')
makedepends=('boost')
replaces=('enblend')
conflicts=('enblend')
provides=('enblend')
install=${pkgname}.install
source=(http://dl.sourceforge.net/sourceforge/enblend/${pkgname}-${pkgver}.tar.gz)
md5sums=('9b6ebaf672f5103c633a53c9723d99c3')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure --prefix=/usr
  make || return 1
  make DESTDIR=${startdir}/pkg install
  rm -f ${startdir}/pkg/usr/share/info/dir
}
