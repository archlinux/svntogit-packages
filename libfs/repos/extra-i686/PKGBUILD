# $Id$
#Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=libfs
pkgver=1.0.1
pkgrel=1
pkgdesc="X11 Font Services Library"
arch=('i686' 'x86_64')
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('glibc' 'xproto' 'fontsproto')
makedepends=('pkgconfig' 'xtrans')
options=(!libtool)
source=(${url}/releases/individual/lib/libFS-${pkgver}.tar.bz2)
md5sums=('81521249353fa33be7a4bb0062c2fbb9')

build() {
  cd ${startdir}/src/libFS-${pkgver}
  ./configure --prefix=/usr || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1
  install -m755 -d ${pkgdir}/usr/share/licenses/${pkgname}
  install -m644 COPYING ${pkgdir}/usr/share/licenses/${pkgname}/ || return 1
}
