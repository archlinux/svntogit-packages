# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gvfs
pkgver=0.2.4
pkgrel=1
pkgdesc="Userspace virtual filesystem implemented as a pluggable module for gio"
arch=(i686 x86_64)
license=('LGPL')
depends=('libsoup>=2.4.1' 'libcdio>=0.80-2' 'fuse>=2.7.3' 'bluez-libs>=3.31' 'smbclient>=3.0.28A' 'libgphoto2>=2.4.0-6' 'gnome-keyring>=2.22.2' 'avahi>=0.6.20' 'libarchive>=2.4.17')
makedepends=('perlxml' 'pkgconfig')
url="http://www.gnome.org"
install=gvfs.install
options=(!libtool)
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/0.2/${pkgname}-${pkgver}.tar.bz2)
md5sums=('08fc85c24ccaf15913dbcc43ea4d8ae8')

build() {
  cd ${startdir}/src/${pkgname}-${pkgver}
  ./configure --prefix=/usr --sysconfdir=/etc \
              --localstatedir=/var --disable-static \
	      --libexecdir=/usr/lib/gvfs || return 1
  make || return 1
  make DESTDIR=${startdir}/pkg install || return 1
}
