# Maintainer: Andrea Scarpino <andrea@archlinux.org>

pkgname=libktorrent
pkgver=git20101213
pkgrel=1
pkgdesc="A BitTorrent library based on KDE Platform"
arch=('i686' 'x86_64')
url="http://ktorrent.org"
license=('GPL2')
depends=('kdelibs')
makedepends=('automoc4' 'cmake' 'boost')
#source=("http://ktorrent.org/downloads/4.0.4/${pkgname}-${pkgver}.tar.bz2")
source=("ftp://ftp.archlinux.org/other/kde/${pkgname}-${pkgver}.tar.bz2")
options=('libtool' 'force')
md5sums=('8383ca72e49098e005f99b90613af72d')

build() {
  cd ${srcdir}
  mkdir build
  cd build
  cmake ../${pkgname}-${pkgver} \
    -DCMAKE_BUILD_TYPE=Release \
    -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd ${srcdir}/build
  make DESTDIR=${pkgdir} install
}
