infodir=usr/share/info

post_install() {
  [[ -x usr/bin/install-info ]] || return 0
  install-info $infodir/plotutils.info.gz $infodir/dir 2> /dev/null
}

post_upgrade() {
  post_install $1
}

pre_remove() {
  [[ -x usr/bin/install-info ]] || return 0
  install-info --delete $infodir/plotutils.info.gz $infodir/dir 2> /dev/null
}
