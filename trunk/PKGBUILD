# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=python-pyqt5-sip
pkgver=12.7.2
pkgrel=1
arch=(x86_64)
pkgdesc="The sip module support for PyQt5"
url="https://riverbankcomputing.com/software/pyqt/intro"
license=('GPL')
depends=(python)
makedepends=(python-setuptools)
source=("https://pypi.python.org/packages/source/P/PyQt5-sip/PyQt5_sip-$pkgver.tar.gz")
sha256sums=('16a19b9f36985b8bff30b89fb8859d831713dd528fba5600563e36ff077960a2')

build() {
  cd PyQt5_sip-$pkgver
  python setup.py build
}

package()  {
  cd PyQt5_sip-$pkgver
  python setup.py install --root="$pkgdir"
}
