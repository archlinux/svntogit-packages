pkgname=freealut
pkgver=1.1.0
pkgrel=6
pkgdesc="OpenAL Utility Toolkit (ALUT)"
arch=('x86_64')
url="http://www.openal.org"
license=("LGPL")
depends=('openal')
source=(http://pkgs.fedoraproject.org/repo/pkgs/freealut/freealut-1.1.0.tar.gz/e089b28a0267faabdb6c079ee173664a/freealut-1.1.0.tar.gz)
sha512sums=('270f74972548b4ac6b98c52c51787ed43c20cf79979063d073bbee7bd08ac4f34c2b579fbf15c09c4e606a5ed38dcd0252f5c46fb3cfe43b727b6b53cf747933')

build() {
  cd $srcdir/$pkgname-$pkgver
  ./configure --prefix=/usr  --disable-static
  make
}

package() {
  cd $srcdir/$pkgname-$pkgver
  make DESTDIR=$pkgdir install
}
