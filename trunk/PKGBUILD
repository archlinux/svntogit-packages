# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=python-pyqt6-sip
pkgver=13.5.0
pkgrel=1
arch=(x86_64)
pkgdesc='The sip module support for PyQt6'
url='https://riverbankcomputing.com/software/pyqt/intro'
license=(GPL)
depends=(python)
makedepends=(python-build python-installer python-setuptools python-wheel)
source=(https://pypi.python.org/packages/source/P/PyQt6-sip/PyQt6_sip-$pkgver.tar.gz)
sha256sums=('61c702b7f81796a27c294ba76f1cba3408161f06deb801373c42670ed36f722a')

build() {
  cd PyQt6_sip-$pkgver
  python -m build --wheel --no-isolation
}

package()  {
  cd PyQt6_sip-$pkgver
  python -m installer --destdir="$pkgdir" dist/*.whl
}
