# Maintainer: Tobias Powalowski <tpowa@archlinux.org>
# Contributor: Sarah Hay <sarah@archlinux.org>

pkgname=openoffice-pt_br
pkgver=2.4.1
pkgrel=1
pkgdesc="OpenOffice portugese brazil language files"
arch=(i686 x86_64)
license=('LGPL')
url="http://www.openoffice.org"
makedepends=('rpmextract')
depends=('openoffice-base')
source=(ftp://ftp-1.gwdg.de/pub/openoffice/extended/2.4.1rc2/BrOo_2.4.1rc2_20080529_LinuxIntel_langpack_pt-BR.tar.gz)
md5sums=('54ddff220cd02bd58ac26f048688fe4f')

build() {
  cd $startdir/src/OOH680_m17_native_packed-1_pt-BR.9310/RPMS
  for i in *.rpm
    do rpmextract.sh $i
  done
  # install openoffice language files
  cd $startdir/src/OOH680_m17_native_packed-1_pt-BR.9310/RPMS/opt
  mkdir -p $startdir/pkg/opt
  mv broffice.org2.4 $startdir/pkg/opt/openoffice
  chown root -R $startdir/pkg/opt/openoffice
  chgrp root -R $startdir/pkg/opt/openoffice
}
