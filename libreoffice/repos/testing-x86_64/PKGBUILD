		--enable-presenter-extra-ui\
		--enable-report-builder\
		--enable-wiki-publisher \
		--enable-ogltrans \
		--without-fonts\
		--without-afms\
		--without-ppds\
		--without-system-agg\
		--without-system-libwps\
		--without-system-mdds\
		--with-system-cppunit\
		--with-system-libwpg\
		--with-system-redland\
		--without-system-saxon\
		--with-openldap\
		--with-ant-home="/usr/share/java/apache-ant"\
		--with-system-boost\
		--with-system-cairo\
		--with-system-libs\
		--with-system-mythes\
		--with-system-unixodbc-headers\
		--with-system-xrender-headers\
