pkgname=gnome-system-monitor
pkgver=3.15.91
pkgrel=1
pkgdesc="A system monitor for GNOME"
arch=(i686 x86_64)
license=('GPL')
depends=('libgtop' 'gtkmm3' 'librsvg' 'systemd')
makedepends=('itstool' 'docbook-xsl' 'intltool' 'desktop-file-utils' 'appdata-tools')
options=(!emptydirs)
url="http://www.gnome.org"
groups=('gnome')
install=gnome-system-monitor.install
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz)
sha256sums=('4f7b4331fd8345af26ecb016b99044518cfa4c9d596836bc9eb53fe0d288dd1e')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
    --libexecdir=/usr/lib/$pkgname --enable-systemd
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
