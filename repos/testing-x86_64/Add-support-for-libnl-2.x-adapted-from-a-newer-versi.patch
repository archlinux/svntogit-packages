diff --git a/config.h.in b/config.h.in
index f988e8f..3b9ce3c 100644
--- a/config.h.in
+++ b/config.h.in
@@ -52,6 +52,9 @@
 /* if libnl exists */
 #undef HAVE_LIBNL
 
+/* if libnl exists and is version 2.x */
