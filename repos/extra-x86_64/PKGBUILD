pkgbase=postfix
pkgname=(
  postfix
  postfix-{cdb,ldap,lmdb,mysql,pcre,pgsql,sqlite}
)
pkgver=3.8.0
pkgrel=1
pkgdesc="Fast, easy to administer, secure mail server"
arch=(x86_64)
url="http://www.postfix.org/"
license=(EPL)
depends=(glibc)
makedepends=(
  db
  icu
  libldap
  libnsl
  libsasl
  lmdb
  mariadb-libs
  openssl
  pcre2
  postgresql-libs
  sqlite
  tinycdb
  zlib
)
