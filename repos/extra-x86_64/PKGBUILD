# $Id$
# Maintainer: Jan de Groot <jgc@archlinux.org>

pkgname=gnome-characters
pkgver=3.22.0+1+g0d4ff80
pkgrel=1
pkgdesc="A character map application"
arch=(i686 x86_64)
url="https://git.gnome.org/browse/gnome-characters"
license=(GPL2)
depends=(gjs gtk3 libunistring gnome-desktop)
makedepends=(intltool gobject-introspection appstream-glib git gperf)
groups=(gnome-extra)
_commit=0d4ff8039a91c862fcfaf473cebb9b4767b5312b  # master
source=("git://git.gnome.org/gnome-characters#commit=$_commit")
sha256sums=('SKIP')

pkgver() {
  cd $pkgname
  git describe --tags | sed 's/^v//;s/-/+/g'
}

prepare() {
  cd $pkgname
  NOCONFIGURE=1 ./autogen.sh
}

build() {
  cd $pkgname
  ./configure --prefix=/usr
  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool
  make
}

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
}

# vim:set ts=2 sw=2 et:
