  $pkgbase-$pkgver.tar.gz.sig::https://de.postfix.org/ftpmirror/official/$pkgbase-$pkgver.tar.gz.gpg2
  $pkgbase-3.5.8-main_defaults.patch
  $pkgbase.service
  $pkgbase.sysusers
  $pkgbase.tmpfiles
)
