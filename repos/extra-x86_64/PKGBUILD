# $Id$
# Maintainer: 
pkgname=meld
pkgver=1.2
pkgrel=2
pkgdesc="Visual diff and merge tool for GNOME"
arch=(i686 x86_64)
license=('GPL')
url="http://meld.sourceforge.net/"
depends=('gnome-python-desktop>=2.22.0' 'gtksourceview')
makedepends=('perlxml' 'pkgconfig' 'gnome-doc-utils>=0.12.2' 'intltool')
source=(http://ftp.gnome.org/pub/gnome/sources/${pkgname}/1.2/${pkgname}-${pkgver}.tar.gz
	meld_buildfix.diff)
md5sums=('50ea5a7cdf2451448a78e53b172d7f6f'
         '074042dcafc9869a4dad69e0d1d92b0e')

build() {
  cd ${srcdir}/${pkgname}-${pkgver}
  patch -Np1 -i ../meld_buildfix.diff || return 1
  make prefix=/usr || return 1
  make prefix=/usr DESTDIR=${pkgdir} install || return 1
  rm -rf ${pkgdir}/usr/gnome/share/doc
}
