         testdir = os.path.join(self.framework_test_dir, '7 gnome')
         self.init(testdir, extra_args=['-Db_sanitize=address', '-Db_lundef=false'])
@@ -1014,6 +1015,7 @@ class LinuxlikeTests(BasePlatformTests):
