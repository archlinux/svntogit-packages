# arg 1:  the new package version
# arg 2:  the old package version

post_install() {
  echo "NOTE:"
  echo "  If you experience any problems after installing xsane "
  echo "  it may help to remove the setup and preferences files"
  echo "  of xsane:"
  echo ""
  echo "    \$ rm -rf ~/.sane/xsane"
  echo ""
}

post_upgrade() {
  post_install $1
}
