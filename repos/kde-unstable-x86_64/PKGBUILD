# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=libkleo
pkgver=23.03.80
pkgrel=1
pkgdesc='KDE PIM cryptographic library'
arch=(x86_64)
url='https://kontact.kde.org'
license=(LGPL)
depends=(qgpgme kitemmodels kpimtextedit)
makedepends=(extra-cmake-modules qt5-tools boost doxygen)
source=(https://download.kde.org/unstable/release-service/$pkgver/src/$pkgname-$pkgver.tar.xz{,.sig})
sha256sums=('21aad222b642c19f03055680d0f16555fe6215fec8aefcff27394dcc5851d42e'
            'SKIP')
validpgpkeys=(CA262C6C83DE4D2FB28A332A3A6A4DB839EAA6D7  # Albert Astals Cid <aacid@kde.org>
              F23275E4BF10AFC1DF6914A6DBD2CE893E2D1C87  # Christoph Feck <cfeck@kde.org>
              D81C0CB38EB725EF6691C385BB463350D6EF31EF) # Heiko Becker <heiko.becker@kde.org>

build() {
  cmake -B build -S $pkgname-$pkgver \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build

# https://bugs.kde.org/show_bug.cgi?id=467503
  cp "$pkgdir"/usr/lib/cmake/KPim5Libkleo/KPim5LibkleoQchTargets.cmake "$pkgdir"/usr/lib/cmake/KF5Libkleo/
}
