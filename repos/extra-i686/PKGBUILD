pkgname=gnome-system-monitor
pkgver=3.18.0
pkgrel=1
pkgdesc="A system monitor for GNOME"
arch=(i686 x86_64)
license=('GPL')
depends=('libgtop' 'gtkmm3' 'librsvg' 'systemd' 'libwnck3')
makedepends=('itstool' 'docbook-xsl' 'intltool' 'desktop-file-utils' 'appdata-tools')
options=(!emptydirs)
url="http://www.gnome.org"
groups=('gnome')
install=gnome-system-monitor.install
source=(http://ftp.gnome.org/pub/gnome/sources/$pkgname/${pkgver:0:4}/$pkgname-$pkgver.tar.xz)
sha256sums=('19d4322a8b7f932b2bb8f3dd0b21a20b0cd4b7dafb55fcdfbd2bc8c109b02b10')

build() {
  cd $pkgname-$pkgver
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
    --libexecdir=/usr/lib/$pkgname --enable-systemd --enable-wnck
  make
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
