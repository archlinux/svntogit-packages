# arg 1:  the new package version
post_install() {
  # Create plugin config /usr/lib/graphviz/config.
  usr/bin/dot -c
}

# arg 1:  the new package version
# arg 2:  the old package version
post_upgrade() {
  post_install $1
}

# arg 1:  the old package version
post_remove() {
  rm -f usr/lib/graphviz/config
}
