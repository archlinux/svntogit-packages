# $Id: PKGBUILD 55397 2011-09-11 21:15:58Z spupykin $
# Maintainer: Ray Rashif <schiv@archlinux.org>
# Contributor: Sergej Pupykin <pupykin.s+arch@gmail.com>
# Contributor: see .contrib

pkgname=libconfig
pkgver=1.7.2
pkgrel=1
pkgdesc="C/C++ Configuration File Library"
arch=('x86_64')
url="https://github.com/hyperrealm/libconfig"
license=('LGPL')
depends=('gcc-libs')
makedepends=('texinfo')
options=('!emptydirs' 'zipman')
source=($pkgname-$pkgver.tar.gz::"https://github.com/hyperrealm/libconfig/archive/v$pkgver.tar.gz")
md5sums=('d666f0ca093906d34d6e1e4890053e62')

prepare() {
  cd $pkgname-$pkgver
  autoreconf -vi
}

build() {
  cd $pkgname-$pkgver

  ./configure --prefix=/usr
  make
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
  rm "$pkgdir/usr/share/info/dir"
}

# vim:set ts=2 sw=2 et:
