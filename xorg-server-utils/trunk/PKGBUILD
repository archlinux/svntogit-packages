build() {
  cd ${startdir}/src
  for i in *; do
    if [ -d "${i}" ]; then
      pushd "${i}"
      case "${i}" in
        xrdb*)
	  ./configure --prefix=/usr --with-cpp=/usr/bin/mcpp\ -@old
	;;
	lbxproxy*)
	  sed -e 's|$(libdir)/X11/lbxproxy|$(datadir)/X11/libxproxy|g' \
	      -i Makefile.* || return 1
	  ./configure --prefix=/usr
	;;
	*)
	  ./configure --prefix=/usr
	;;
      esac
      make || return 1
      make DESTDIR=${startdir}/pkg install || return 1
      popd
    fi
  done
}
