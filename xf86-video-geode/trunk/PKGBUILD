# $Id$
# Maintainer: Alexander Baldeck <alexander@archlinux.org>
pkgname=xf86-video-geode
pkgver=2.11.2
pkgrel=1
pkgdesc="X.org AMD/Geode LX & NX video driver"
# there is no 64bit geode yet! (does not build either, i386 ASM)
arch=(i686)
license=('custom')
url="http://xorg.freedesktop.org/"
depends=('glibc')
makedepends=('pkgconfig' 'xorg-server>=1.6.0' 'xf86dgaproto')
conflicts=('xorg-server<1.6.0')
options=('!libtool')
conflicts=('xf86-video-amd')
replaces=('xf86-video-amd')
groups=('xorg-video-drivers')
source=(${url}/releases/individual/driver/${pkgname}-${pkgver}.tar.bz2)
md5sums=('4c652ecba772f705296b8e52d746857c')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr \
	      --enable-visibility || return 1
  make || return 1
  make DESTDIR="${pkgdir}" install || return 1

  install -m755 -d "${pkgdir}/usr/share/licenses/${pkgname}"
  install -m644 COPYING "${pkgdir}/usr/share/licenses/${pkgname}/" || return 1
}
