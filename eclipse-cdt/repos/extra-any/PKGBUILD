pkgname=eclipse-cdt
pkgver=7.0.1
pkgrel=1
_date=201009241320
pkgdesc="C/C++ Plugin for Eclipse"
arch=('any')
url="http://www.eclipse.org/cdt"
license=("EPL")
depends=('eclipse')
source=("http://download.eclipse.org/tools/cdt/releases/helios/dist/cdt-master-${pkgver}-I${_date}.zip")
md5sums=('30247332bd5f948c02d71e758b567702')

package() {
  installdir=${pkgdir}/usr/share/eclipse/dropins/cdt

  cd ${srcdir}
  install -d ${installdir}/eclipse
  cp -a ${srcdir}/features ${installdir}/eclipse
  cp -a ${srcdir}/plugins ${installdir}/eclipse
}
