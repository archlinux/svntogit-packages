# $Id$
# Maintainer:
# Contributor: Juergen Hoetzel <juergen@archlinux.org>

pkgname=sawfish
pkgver=1.7.0.1
pkgrel=1
pkgdesc="An extensible window manager using a Lisp-based scripting language"
arch=('i686' 'x86_64')
url="http://sawfish.wikia.com/wiki/Main_Page"
license=('GPL')
depends=('rep-gtk' 'libsm')
install=${pkgname}.install
source=(http://download.tuxfamily.org/${pkgname}/${pkgname}/${pkgname}-${pkgver}.tar.bz2)
sha1sums=('455e8739807a71cce86c2ec5e4ecdbcd86c64a99')

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  ./configure --prefix=/usr --libexecdir=/usr/lib
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR="${pkgdir}" install

  install -Dm644 sawfish-session.desktop \
    "${pkgdir}/etc/X11/sessions/${pkgname}.desktop"
}
